<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/size_6"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_gravity="center"
        android:gravity="center|start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mail_row_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mail_bg_circle_danger"
            android:contentDescription="@string/mail_letter_a" />

        <TextView
            android:id="@+id/mail_row_icon_letter"
            style="@style/MailComponents.TextLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mail_letter_a" />
    </RelativeLayout>

    <LinearLayout
        style="@style/MailComponents.RowBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mail_row_user"
                    style="@style/MailComponents.h4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mail_row_user"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mail_row_title"
                    style="@style/MailComponents.h4.info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mail_row_title" />

                <TextView
                    android:id="@+id/mail_row_body_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mail_row_body_txt" />
            </LinearLayout>

            <TextView
                android:id="@+id/mail_row_date"
                style="@style/MailComponents.AlignTopRight.DateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mail_row_date" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>