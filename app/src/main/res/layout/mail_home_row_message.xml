<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/size_6">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center|start">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/mail_letter_a"
            android:src="@drawable/ic_attach_file" />
    </RelativeLayout>

    <LinearLayout
        style="@style/MailComponents.RowBody"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mail_message_attach_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mail_attach_file"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mail_message_attach_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mail_attach_file_size" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mail_message_attach_download"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center|start">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/mail_letter_a"
            android:src="@drawable/ic_save_alt" />
    </RelativeLayout>
</LinearLayout>